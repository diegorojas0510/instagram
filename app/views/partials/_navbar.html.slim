    = link_to profile_path(current_user.profile), class: "flex items-center space-x-2 text-gray-900 hover:bg-gray-200 hover:text-white px-3 py-2 rounded-md text-sm font-medium"
      .relative
        - if current_user.profile.image.attached?
          img.h-8.w-8.rounded-full src="#{url_for(current_user.profile.image)}" alt="Profile Image"
        - else
          img.h-8.w-8.rounded-full[src="#{url_to_image('avatar.png')}" alt="Profile Image"]
        span.absolute.top-0.right-0.block.h-3.w-3.rounded-full.ring-2.ring-white.bg-green-600
