<div class="min-h-full flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <h1 class="border-indigo-500 text-gray-900 inline-flex items-center px-1 pt-1 border-b-2 text-3xl font-medium">Nuevo Pin</h1>
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= form_for @pin do |f| %>
      <div class="space-y-6">
        <div>
          <div class="mt-1">
            <%= f.label :tittle %>
            <%= f.text_field :tittle, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>
        </div>
        <div>
          <div class="mt-1">
            <%= f.label :image_url %>
            <%= f.url_field :image_url, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>
        </div>
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <br>
          </div>
        </div>
        <div>
          <%= f.submit class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      </div>
    <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

